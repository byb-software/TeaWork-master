<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_context"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qf.teawork.ContextActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <TextView
            android:id="@+id/content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题：暂无网络数据"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间："
            android:layout_below="@+id/content_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无网络数据"
            android:layout_toRightOf="@+id/time"
            android:layout_below="@id/content_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/laiyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来源："
            android:layout_toRightOf="@+id/content_time"
            android:layout_below="@id/content_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/content_laiyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无网络数据"
            android:layout_toRightOf="@+id/laiyuan"
            android:layout_below="@id/content_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            />


    </RelativeLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        ></WebView>


    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/callback"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/contentback"
            android:onClick="click"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/contentshare"
            android:onClick="click"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/collect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/collectcontent"
            android:onClick="click"
            android:scaleType="centerCrop"
            />

    </LinearLayout>

</LinearLayout>
